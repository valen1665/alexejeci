<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_marginLeft="0dp"
        android:id="@+id/imagen"
        android:layout_width="100dp"
        android:layout_height="100dp" />


    <TextView
        android:layout_toRightOf="@+id/imagen"
        android:layout_alignParentTop="true"
        android:id="@+id/text_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#CC0000"/>
    <TextView
        android:layout_alignLeft="@+id/text_nombre"
         android:layout_below="@id/text_nombre"
        android:id="@+id/text_autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#3300CC"/>
    <TextView
        android:layout_alignLeft="@+id/text_autor"

        android:id="@+id/text_anio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#3300CC"
        android:layout_below="@id/text_autor"/>


</RelativeLayout>